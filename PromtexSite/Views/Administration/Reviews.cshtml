@model List<Review>

<h1>Отзывы</h1>

<div class="m-2">
    <a class="btn btn-info" href="/Administration/AddReview">Добавить отзыв</a>
    <a class="btn btn-info float-right" href="/Administration/Index">Назад</a>
</div>
@if (Model.FirstOrDefault() != null)
{
<div class="m-2">
    <table class="table table-bordered table-hover" id="tblExport">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Текст</th>
                <th>Мин.Текст</th>
                <th>Компания</th>
                <th>Должность</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
            <tr>
                <td><a asp-action="UpdateReview" asp-route-ID="@b.ID">@b.Name</a></td>
                <td>@b.Text</td>
                <td>@b.TextMin</td>
                <td>@b.CompanyName</td>
                <td>@b.CompanyPosition</td>
            </tr>
            }
        </tbody>

    </table>
</div>
}