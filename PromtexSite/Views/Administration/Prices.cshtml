@model List<TablePrice>
@{
    ViewData["Title"] = "Prices";
}
<div class="m-2">
    <a class="btn btn-info" href="/Administration/AddPrice">Добавить новую строчку</a>
    <a class="btn btn-info float-right" href="/Administration/Index">Назад</a>
</div>
@if (Model.FirstOrDefault() != null)
{
    <div class="m-2">
        <table class="table table-bordered table-hover" id="tblExport">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Ед.изм</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td><a asp-action="UpdatePrice" asp-route-ID="@b.ID">@b.Name</a></td>
                        <td>@b.Price</td>
                        <td>@b.Unit</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}