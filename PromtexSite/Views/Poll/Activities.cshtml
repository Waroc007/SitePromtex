@model Poll
@{
    ViewData["Title"] = "Activities";
}


<div class="container">
    <h3>Укажите Ваши виды деятельности</h3>
    <div class="form-group">
        <form method="post">
            @if (Model.Activities != null && Model.Activities.ContainsKey(1))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id1" value="1" checked>
                    <label class="form-check-label">
                        Бытовые услуги физическим лицам
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id1" value="1">
                    <label class="form-check-label">
                        Бытовые услуги физическим лицам
                    </label>
                </div>
            }
            @if (Model.Activities != null && Model.Activities.ContainsKey(2))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id2" value="2" checked>
                    <label class="form-check-label">
                        Услуги организациям
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id2" value="2">
                    <label class="form-check-label">
                        Услуги организациям
                    </label>
                </div>
            }

            @if (Model.Activities != null && Model.Activities.ContainsKey(3))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id3" value="3" checked>
                    <label class="form-check-label">
                        Розничная торговля
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id3" value="3">
                    <label class="form-check-label">
                        Розничная торговля
                    </label>
                </div>
            }
            @if (Model.Activities != null && Model.Activities.ContainsKey(4))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id4" value="4" checked>
                    <label class="form-check-label">
                        Оптовая торговля
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id4" value="4">
                    <label class="form-check-label">
                        Оптовая торговля
                    </label>
                </div>
            }

            @if (Model.Activities != null && Model.Activities.ContainsKey(5))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id5" value="5" checked>
                    <label class="form-check-label">
                        Общественное питание
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id5" value="5">
                    <label class="form-check-label">
                        Общественное питание
                    </label>
                </div>
            }

            @if (Model.Activities != null && Model.Activities.ContainsKey(6))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id6" value="6" checked>
                    <label class="form-check-label">
                        Строительство
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id6" value="6">
                    <label class="form-check-label">
                        Строительство
                    </label>
                </div>
            }
            @if (Model.Activities != null && Model.Activities.ContainsKey(7))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id7" value="7" checked>
                    <label class="form-check-label">
                        Производство
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id7" value="7">
                    <label class="form-check-label">
                        Производство
                    </label>
                </div>
            }
            @if (Model.Activities != null && Model.Activities.ContainsKey(8))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id8" id="id8" value="8" checked>
                    <label class="form-check-label">
                        Другое, указать что
                    </label>
                    <input type="text" name="text" id="text" value="@Model.Activities[8]" class="form-control m-1" />
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="id8" id="id8" value="8">
                    <label class="form-check-label">
                        Другое, указать что
                    </label>
                    <input type="text" name="text" class="form-control m-1" id="text" disabled />
                </div>
            }
            @if (ViewBag.Error != null)
            {
                <p class="text-danger font-weight-bold">
                    @ViewBag.Error
                </p>
            }
            <a class="btn btn-danger btn-lg m-2" asp-action="AvailabilityOfActivities" asp-route-key="@ViewBag.Key">Назад</a>
            <input type="submit" class="btn btn-danger btn-lg m-2" value="Далее" />
        </form>
    </div>
</div>
@section Scripts {
    <script>
        $('#id8').click(function () {
            if ($('#id8').prop('checked')) {
                $("#text").prop("disabled", false);
            }
            else {
                $("#text").prop("disabled", true);
            }
        });
        
    </script>
    }